<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteers Management - Turtle Shelter Project</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <!-- HEADER -->
    <header style="background-color: #3b7a57; padding: 15px 20px; color: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <div style="display: flex; align-items: center; justify-content: space-between;">
            <!-- Logo and Website Name -->
            <a href="/admin-welcome">
                <div style="display: flex; align-items: center;">
                    <img src="/images/logo.png" alt="Website Logo" class="logo">
                    <h1 style="margin: 0; font-size: 24px; color: white;">TURTLE SHELTER PROJECT - ADMINISTRATOR</h1>
                </div>
            </a>
            <!-- Navigation Links -->
            <nav>
                <ul style="list-style: none; display: flex; margin: 0; padding: 0;">
                    <li style="margin: 0 10px;"><a href="/admin-welcome" style="color: white; text-decoration: none; font-weight: bold;">Admin Home</a></li>
                    <li style="margin: 0 10px;"><a href="/volunteer-manage" style="color: white; text-decoration: none; font-weight: bold;">Volunteers</a></li>
                    <li style="margin: 0 10px;"><a href="/event-manage" style="color: white; text-decoration: none; font-weight: bold;">Events</a></li>
                    <li style="margin: 0 10px;"><a href="/user-manage" style="color: white; text-decoration: none; font-weight: bold;">Users</a></li>
                    <li style="margin: 0 10px;"><a href="/" style="color: white; text-decoration: none; font-weight: bold;">Back to Public Home</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Volunteer Forms Page Content -->
    <div class="container">
        <!-- New Volunteer Forms -->
        <div class="forms-container">
            <h2>New Volunteer Forms</h2>
            <% if (new_forms.length > 0) { %>
                <% new_forms.forEach(row => { %>
                    <a href="/volunteer-details/<%= row.volunteer_id %>">
                        <div class="form-card new">
                            <div class="details">
                                <p><b>Name:</b> <%= row.volunteer_first_name %> <%= row.volunteer_last_name %></p>
                                <p><b>Email:</b> <%= row.volunteer_email_address %></p>
                                <p><b>Location:</b> <%= row.volunteer_city %>, <%= row.volunteer_state %></p>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <div class="details">
                    <p>No new volunteer forms</p>
                </div>
            <% } %>
        </div>

        <!-- Previously Reviewed Forms -->
        <div class="forms-container">
            <h2>Current Volunteers</h2>
            <% if (current.length > 0) { %>
                <% current.forEach(row => { %>
                    <a href="/volunteer-details/<%= row.volunteer_id %>">
                        <div class="form-card">
                            <div class="details">
                                <p><b>Name:</b> <%= row.volunteer_first_name %> <%= row.volunteer_last_name %></p>
                                <p><b>Email:</b> <%= row.volunteer_email_address %></p>
                                <p><b>Location:</b> <%= row.volunteer_city %>, <%= row.volunteer_state %></p>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <div class="details">
                    <p>No current volunteers</p>
                </div>
            <% } %>
        </div>

        <!-- Past Volunteers -->
        <div class="forms-container">
            <h2>No Longer Volunteering</h2>
            <% if (past.length > 0) { %>
                <% past.forEach(row => { %>
                    <a href="/volunteer-details/<%= row.volunteer_id %>">
                        <div class="form-card">
                            <div class="details">
                                <p><b>Name:</b> <%= row.volunteer_first_name %> <%= row.volunteer_last_name %></p>
                                <p><b>Email:</b> <%= row.volunteer_email_address %></p>
                                <p><b>Location:</b> <%= row.volunteer_city %>, <%= row.volunteer_state %></p>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <div class="details">
                    <p>No past volunteers</p>
                </div>
            <% } %>
        </div>

        <!-- Add volunteer button -->
        <div style="text-align: center;">
         <a class="btn" href="/admin-add-volunteer" style="text-align: center; padding: 10px">Add a Volunteer</a>
        </div>
    </div>

    <!-- FOOTER -->
    <footer style="background-color: #3b7a57; padding: 15px 20px; color: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <p>&copy; 2024 Turtle Shelter Project</p>
    </footer>
</body>
</html>